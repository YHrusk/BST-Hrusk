@page "/calendar"

<h1 class="uppercase">Calendar</h1>

<div class="flex w-full items-center justify-center">
  <div class="text-center">
    <header class="relative">
      <h2 class="uppercase">@currentMonth.ToString("MMMM")</h2>

      <button class="border-2 text-2xl text-yellow-500 content-center" @onclick="PreviousMonth">←</button>
      <button class="border-2 text-2xl text-yellow-500 content-center" @onclick="NextMonth">→</button>
    </header>

    <table class="border-collapse">
      <thead class="font-semibold uppercase">
        <tr>
          <td>Mo</td>
          <td>Tu</td>
          <td>We</td>
          <td>Th</td>
          <td>Fr</td>
          <td>Sa</td>
          <td>Su</td>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td class="hover:border-2 hover:border-solid">26</td>
          <td class="hover:border-2 hover:border-solid">27</td>
          <td class="hover:border-2 hover:border-solid">28</td>
          <td class="hover:border-2 hover:border-solid">29</td>
          <td class="hover:border-2 hover:border-solid">30</td>
          <td class="hover:border-2 hover:border-solid">31</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">1</td>
        </tr>
        <tr>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">2</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">3</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">4</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">5</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">6</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">7</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">8</td>
        </tr>
        <tr>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">9</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">10</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">11</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">12</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">13</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">14</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">15</td>
        </tr>
        <tr>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">16</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">17</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">18</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">19</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">20</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">21</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">22</td>
        </tr>

        <tr>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">23</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">24</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">25</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">26</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">27</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">28</td>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">29</td>
        </tr>
        <tr>
          <td class="hover:border-2 hover:border-solid hover:border-yellow-500">30</td>
          <td class="hover:border-2 hover:border-solid">1</td>
          <td class="hover:border-2 hover:border-solid">2</td>
          <td class="hover:border-2 hover:border-solid">3</td>
          <td class="hover:border-2 hover:border-solid">4</td>
          <td class="hover:border-2 hover:border-solid">5</td>
          <td class="hover:border-2 hover:border-solid">6</td>
        </tr>
      </tbody>
    </table>
  </div>
  <!-- end calendar -->
</div>
<!-- end container -->

@code {
    DateTime currentMonth = DateTime.Now;

    void PreviousMonth()
    {
        currentMonth = currentMonth.AddMonths(-1);
    }

    void NextMonth()
    {
        currentMonth = currentMonth.AddMonths(1);
    }
}
